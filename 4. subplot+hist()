subplot+hist()

data=np.random.random((4,10))
titles = ['t1','t2','t3','t4'] 
xaxes = ['x1','x2','x3','x4']
yaxes = ['y1','y2','y3','y4']

f,a = plt.subplots(2,2,figsize=(15,10))
a = a.ravel()
for idx,ax in enumerate(a):
    ax.hist(data[idx])
    ax.set_title(titles[idx])
    ax.set_xlabel(xaxes[idx])
    ax.set_ylabel(yaxes[idx])

